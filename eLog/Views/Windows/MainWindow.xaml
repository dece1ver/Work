<Window x:Class="eLog.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:inf="clr-namespace:eLog.Infrastructure"
        xmlns:cnv="clr-namespace:eLog.Infrastructure.Converters"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:eLog" FontSize="24"
        mc:Ignorable="d" xmlns:vm="clr-namespace:eLog.ViewModels" d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        Title="Электронный журнал оператора" MinWidth="840" MinHeight="480" Width="1366" Height="768" WindowState="Maximized">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <cnv:CountConverter x:Key="countConverter"/>
        <cnv:MinuteConverter x:Key="minuteConverter"/>
        <cnv:WidthConverter x:Key="widthConverter"/>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="9 2"/>
            <!--<Setter Property="FontSize" Value="24"/>-->
        </Style>
        <Style TargetType="Button" x:Key="generalButton">
            <Setter Property="Margin" Value="4 0"/>
            <Setter Property="Width" Value="250"/>
        </Style>
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Параметры">
                <MenuItem Header="Операторы" Command="{Binding EditOperatorsCommand}" CommandParameter="{Binding Operators}"/>
            </MenuItem>
        </Menu>
        <DockPanel DockPanel.Dock="Top" Height="Auto" LastChildFill="True"  Margin="0 0 0 0">
            <DockPanel>
                <TextBlock Text="Станок:" Padding="5 3" Margin="4 0 0 0" DockPanel.Dock="Left"/>
                <TextBlock Text="{Binding Machine.Name}" Padding="0 3" Margin="-4 0 4 0" DockPanel.Dock="Left"/>
                <TextBlock Text="Оператор:" Padding="5 3" Margin="10 0 0 0" DockPanel.Dock="Left"/>
                <Button Content="Начать смену" DockPanel.Dock="Right" Visibility="{Binding StartShiftButtonVisibility}"
                        Command="{Binding StartShiftCommand}" Style="{StaticResource generalButton}"/>
                <Button Content="Завершить смену" DockPanel.Dock="Right" Visibility="{Binding EndShiftButtonVisibility}"
                        Command="{Binding EndShiftCommand}" Style="{StaticResource generalButton}"/>
                <ComboBox ItemsSource="{Binding Operators}" 
                          SelectedItem="{Binding CurrentOperator}"
                          Text="{Binding CurrentOperator.DisplayName, Mode=OneWay}"
                          IsEnabled="{Binding EditshiftInfoIsEnabled}"
                          DisplayMemberPath="DisplayName"
                          Width="250" Margin="4 0 0 0">
                </ComboBox>
                <ComboBox ItemsSource="{Binding Shifts}" SelectedItem="{Binding Shifts[1]}" IsEnabled="{Binding EditshiftInfoIsEnabled}" 
                          Margin="4 0 0 0" />
            </DockPanel>
        </DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding Status}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right" VerticalContentAlignment="Stretch">
                <ProgressBar Value="{Binding Progress}" Maximum="{Binding ProgressMaxValue}" 
                             Visibility="{Binding ProgressBarVisibility}" Width="200" Margin="0"/>
            </StatusBarItem>
        </StatusBar>
        <GroupBox Header="Изготовление">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top">
                    <Button Content="+" Command="{Binding StartDetailCommand}" IsEnabled="{Binding ShiftStarted}"/>
                </StackPanel>
                <DockPanel LastChildFill="True" Visibility="{Binding PartsVisibility}">
                    <Grid>
                        <!--НАЧАЛО КОСТЫЛЯ-->
                        <!--<Grid Visibility="Hidden">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="{Binding ElementName=orderColumn, Path=ActualWidth}"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="{Binding ElementName=partsCountColumn, Path=ActualWidth}"/>
                                <ColumnDefinition Width="{Binding ElementName=setupTimeColumn, Path=ActualWidth}"/>
                                <ColumnDefinition Width="{Binding ElementName=machineTimeColumn, Path=ActualWidth}"/>
                                <ColumnDefinition Width="10"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="1" x:Name="helperField"/>
                        </Grid>-->
                        <!--КОНЕЦ КОСТЫЛЯ-->
                        <ListView ItemsSource="{Binding Parts, UpdateSourceTrigger=PropertyChanged}" Background="Beige">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel LastChildFill="True">
                                        <Grid Visibility="Visible">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="200*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="100*"/>
                                                <ColumnDefinition Width="120*"/>
                                                <ColumnDefinition Width="120*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Order}"/>
                                            <TextBlock Grid.Column="1" Text="{Binding FullName}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding PartsCount, Converter={StaticResource countConverter}}"/>
                                            <TextBlock Grid.Column="3" Text="{Binding StringFormat=Норма: наладка - {0}мин\,, Path=SetupTimePlan}"/>
                                            <TextBlock Grid.Column="4" Text="{Binding StringFormat=шт - {0}мин\, , Path=MachineTimePlan}"/>

                                            <TextBlock Grid.Row="1" DockPanel.Dock="Bottom" Text="ВСЯКОЕ ТУТ ТАКОЕ"/>
                                        </Grid>
                                        
                                        <!--<ListView >
                                            <ListView.View>
                                                <GridView>
                                                    <GridView.Columns>
                                                        <GridViewColumn x:Name="orderColumn" Header="М/Л" DisplayMemberBinding="{Binding Order}" Width="200"/>
                                                        <GridViewColumn Header="Номенклатура" DisplayMemberBinding="{Binding FullName}" Width="{Binding ElementName=helperField, Path=ActualWidth}"/>
                                                        <GridViewColumn x:Name="partsCountColumn" Header="Количество" DisplayMemberBinding="{Binding PartsCount, Converter={StaticResource countConverter}}" Width="100"/>
                                                        <GridViewColumn x:Name="setupTimeColumn" Header="Наладка план" DisplayMemberBinding="{Binding SetupTimePlan, Converter={StaticResource minuteConverter}}" Width="120"/>
                                                        <GridViewColumn x:Name="machineTimeColumn" Header="Штучное план" DisplayMemberBinding="{Binding MachineTimePlan, Converter={StaticResource minuteConverter}}" Width="120"/>
                                                    </GridView.Columns>
                                                </GridView>
                                            </ListView.View>
                                        </ListView>-->
                                    </DockPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </DockPanel>
            </DockPanel>
        </GroupBox>
    </DockPanel>
</Window>
