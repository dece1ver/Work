<Window x:Class="eLog.Views.Windows.Dialogs.EndDetailDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:eLog.Views.Windows.Dialogs"
        xmlns:vm="clr-namespace:eLog.ViewModels" xmlns:cmd="clr-namespace:eLog.Infrastructure.Commands" 
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        mc:Ignorable="d" FontSize="20" WindowStyle="None"
        Title="Завершение наладки" Height="242" Width="612" WindowStartupLocation="CenterOwner" Topmost="True" ResizeMode="NoResize">
    <Border BorderThickness="1" BorderBrush="LightGray">
        <Grid Margin="5 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <UniformGrid Grid.Row="0" Columns="3">
                <Button Margin="5 10 5 10" IsDefault="True" IsEnabled="{Binding CanBeFinished}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=l:EndDetailDialogWindow}}">
                    <Button.Content>
                        <TextBlock Text="Завершить и начать следующую" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" TextAlignment="Center"/>
                    </Button.Content>
                    <Button.Command>
                        <cmd:CloseEndDetailDialogCommand EndDetailResult="FinishAndNext"/>
                    </Button.Command>
                </Button>
                <Button Margin="5 10 5 10" IsCancel="True" IsEnabled="{Binding CanBeFinished}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=l:EndDetailDialogWindow}}">
                    <Button.Content>
                        <TextBlock Text="Только завершить" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" TextAlignment="Center"/>
                    </Button.Content>
                    <Button.Command>
                        <cmd:CloseEndDetailDialogCommand EndDetailResult="Finish"/>
                    </Button.Command>
                </Button>
                <Button Margin="5 10 5 10" IsCancel="True"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=l:EndDetailDialogWindow}}">
                    <Button.Content>
                        <TextBlock Text="Случайно тыкнул" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" TextAlignment="Center"/>
                    </Button.Content>
                    <Button.Command>
                        <cmd:CloseEndDetailDialogCommand EndDetailResult="Cancel"/>
                    </Button.Command>
                </Button>
            </UniformGrid>
            <DockPanel Grid.Row="1" LastChildFill="True" Margin="10 0 5 10">
                <TextBlock DockPanel.Dock="Left" Text="Количество: "/>
                <TextBox Text="{Binding _PartsCount}" HorizontalAlignment="Stretch"/>
            </DockPanel>
        </Grid>
    </Border>
</Window>
