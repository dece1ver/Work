<Window x:Class="eLog.Views.Windows.Dialogs.EndDetailDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:eLog.Views.Windows.Dialogs"
        xmlns:vm="clr-namespace:eLog.ViewModels" xmlns:cmd="clr-namespace:eLog.Infrastructure.Commands" 
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        mc:Ignorable="d" FontSize="19" WindowStyle="None"
        Title="Завершение наладки" Height="200" Width="720" WindowStartupLocation="CenterOwner" Topmost="True" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button" x:Key="keyboardButton">
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Focusable" Value="False"/>
        </Style>
    </Window.Resources>
    <Border BorderThickness="1" BorderBrush="LightGray">
        <Grid Margin="5 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="480"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.3656*"/>
            </Grid.RowDefinitions>
            <UniformGrid Grid.Column="0" Grid.Row="0" Columns="3" Margin="0 8 0 2">
                <Button Margin="5 2 2 0" IsDefault="True" IsEnabled="{Binding CanBeFinished}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=l:EndDetailDialogWindow}}">
                    <Button.Content>
                        <TextBlock Text="✓+" FontSize="36" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" TextAlignment="Center"/>
                    </Button.Content>
                    <Button.Command>
                        <cmd:CloseEndDetailDialogCommand EndDetailResult="FinishAndNext"/>
                    </Button.Command>
                </Button>
                <Button Margin="1 2 1 0" IsEnabled="{Binding CanBeFinished}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=l:EndDetailDialogWindow}}">
                    <Button.Content>
                        <TextBlock Text="✓" FontSize="36" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" TextAlignment="Center"/>
                    </Button.Content>
                    <Button.Command>
                        <cmd:CloseEndDetailDialogCommand EndDetailResult="Finish"/>
                    </Button.Command>
                </Button>
                <Button Margin="1 2 5 0" IsCancel="True"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=l:EndDetailDialogWindow}}">
                    <Button.Content>
                        <TextBlock Text="✗" FontSize="36" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" TextAlignment="Center"/>
                    </Button.Content>
                    <Button.Command>
                        <cmd:CloseEndDetailDialogCommand EndDetailResult="Cancel"/>
                    </Button.Command>
                </Button>
            </UniformGrid>
            <DockPanel Grid.Column="0" Grid.Row="1" LastChildFill="True" Margin="5 0 5 10">
                <TextBlock DockPanel.Dock="Left" Text="Количество: " VerticalAlignment="Center" FontSize="18"/>
                <TextBox x:Name="PartsCountTextBox" Width="100" Height="43"
                         VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="24"
                         Text="{Binding _PartsCount, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch"/>
                <TextBlock DockPanel.Dock="Left" Text="Машинное время: " VerticalAlignment="Center" FontSize="18" Margin="9 0 0 0"/>
                <TextBox Width="100" Height="43" VerticalAlignment="Center"  VerticalContentAlignment="Center" FontSize="24"
                          Text="{Binding _MachineTime, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch"/>
            </DockPanel>
            <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" BorderBrush="LightGray" BorderThickness="1" Margin="0 15"/>
            <Grid Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Margin="4 9 5 9" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Grid.Column="0" x:Name="Button7"
                        Content="7" Style="{StaticResource keyboardButton}" Click="Button7_Click"/>
                <Button Grid.Row="0" Grid.Column="1" x:Name="Button8"
                        Content="8" Style="{StaticResource keyboardButton}" Click="Button8_Click"/>
                <Button Grid.Row="0" Grid.Column="2" x:Name="Button9"
                        Content="9" Style="{StaticResource keyboardButton}" Click="Button9_Click"/>
                <Button Grid.Row="0" Grid.Column="3" x:Name="ButtonBackspace"
                        Content="◀" Style="{StaticResource keyboardButton}" Click="ButtonBackspace_Click"/>

                <Button Grid.Row="1" Grid.Column="0" x:Name="Button4"
                        Content="4" Style="{StaticResource keyboardButton}" Click="Button4_Click"/>
                <Button Grid.Row="1" Grid.Column="1" x:Name="Button5"
                        Content="5" Style="{StaticResource keyboardButton}" Click="Button5_Click"/>
                <Button Grid.Row="1" Grid.Column="2"  x:Name="Button6"
                        Content="6" Style="{StaticResource keyboardButton}" Click="Button6_Click"/>
                <Button Grid.Row="1" Grid.Column="3" x:Name="ButtonDel" FontSize="14"
                        Content="Del" Style="{StaticResource keyboardButton}" Click="ButtonDel_Click"/>
                
                <Button Grid.Row="2" Grid.Column="0" x:Name="Button1"
                        Content="1" Style="{StaticResource keyboardButton}" Click="Button1_Click"/>
                <Button Grid.Row="2" Grid.Column="1" x:Name="Button2"
                        Content="2" Style="{StaticResource keyboardButton}" Click="Button2_Click"/>
                <Button Grid.Row="2" Grid.Column="2" x:Name="Button3"
                        Content="3" Style="{StaticResource keyboardButton}" Click="Button3_Click"/>
                <Button Grid.Row="2" Grid.Column="3" x:Name="ButtonClear" FontSize="14"
                        Content="Clear" Style="{StaticResource keyboardButton}" Click="ButtonClear_Click"/>

                <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" x:Name="Button0"
                        Content="0" Style="{StaticResource keyboardButton}" Click="Button0_Click"/>
                <Button Grid.Row="3" Grid.Column="2" x:Name="ButtonDot"
                        Content="." Style="{StaticResource keyboardButton}" Click="ButtonDot_Click" />
                <Button Grid.Row="3" Grid.Column="3" x:Name="ButtonColon"
                        Content=":" Style="{StaticResource keyboardButton}" Click="ButtonColon_Click" />
            </Grid>
        </Grid>
    </Border>
</Window>
