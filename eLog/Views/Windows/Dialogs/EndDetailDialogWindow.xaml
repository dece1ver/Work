<Window x:Class="eLog.Views.Windows.Dialogs.EndDetailDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:eLog.Views.Windows.Dialogs"
        xmlns:vm="clr-namespace:eLog.ViewModels" xmlns:cmd="clr-namespace:eLog.Infrastructure.Commands" 
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        mc:Ignorable="d" FontSize="19" WindowStyle="None"
        Title="Завершение наладки" Height="220" Width="700" WindowStartupLocation="CenterOwner" Topmost="True" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button" x:Key="keyboardButton">
            <Setter Property="Margin" Value="1"/>
        </Style>
    </Window.Resources>
    <Border BorderThickness="1" BorderBrush="LightGray">
        <Grid Margin="5 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="480"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="176"/>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <UniformGrid Grid.Column="0" Grid.Row="0" Columns="3">
                <Button Margin="5 10 5 10" IsDefault="True" IsEnabled="{Binding CanBeFinished}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=l:EndDetailDialogWindow}}">
                    <Button.Content>
                        <TextBlock Text="Завершить и начать следующую" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" TextAlignment="Center"/>
                    </Button.Content>
                    <Button.Command>
                        <cmd:CloseEndDetailDialogCommand EndDetailResult="FinishAndNext"/>
                    </Button.Command>
                </Button>
                <Button Margin="5 10 5 10" IsCancel="True" IsEnabled="{Binding CanBeFinished}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=l:EndDetailDialogWindow}}">
                    <Button.Content>
                        <TextBlock Text="Только завершить" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" TextAlignment="Center"/>
                    </Button.Content>
                    <Button.Command>
                        <cmd:CloseEndDetailDialogCommand EndDetailResult="Finish"/>
                    </Button.Command>
                </Button>
                <Button Margin="5 10 5 10" IsCancel="True"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=l:EndDetailDialogWindow}}">
                    <Button.Content>
                        <TextBlock Text="Случайно тыкнул" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" TextAlignment="Center"/>
                    </Button.Content>
                    <Button.Command>
                        <cmd:CloseEndDetailDialogCommand EndDetailResult="Cancel"/>
                    </Button.Command>
                </Button>
            </UniformGrid>
            <DockPanel Grid.Column="0" Grid.Row="1" LastChildFill="True" Margin="10 0 5 10">
                <TextBlock DockPanel.Dock="Left" Text="Количество: "/>
                <TextBox x:Name="PartsCountTextBox"  Width="90"
                         Text="{Binding _PartsCount, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch"/>
                <TextBlock DockPanel.Dock="Left" Text="Машинное время: " Margin="9 0 0 0"/>
                <TextBox  Width="90"
                          Text="{Binding _MachineTime, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch"/>
            </DockPanel>
            <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" BorderBrush="LightGray" BorderThickness="1" Margin="0 15"/>
            <Grid Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Margin="4 9 5 9" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Grid.Column="0"
                        Content="7" Style="{StaticResource keyboardButton}"/>
                <Button Grid.Row="0" Grid.Column="1"
                        Content="8" Style="{StaticResource keyboardButton}"/>
                <Button Grid.Row="0" Grid.Column="2"
                        Content="9" Style="{StaticResource keyboardButton}"/>
                <Button Grid.Row="1" Grid.Column="0"
                        Content="4" Style="{StaticResource keyboardButton}"/>
                <Button Grid.Row="1" Grid.Column="1"
                        Content="5" Style="{StaticResource keyboardButton}"/>
                <Button Grid.Row="1" Grid.Column="2" 
                        Content="6" Style="{StaticResource keyboardButton}"/>
                <Button Grid.Row="2" Grid.Column="0"
                        Content="1" Style="{StaticResource keyboardButton}"/>
                <Button Grid.Row="2" Grid.Column="1"
                        Content="2" Style="{StaticResource keyboardButton}"/>
                <Button Grid.Row="2" Grid.Column="2"
                        Content="3" Style="{StaticResource keyboardButton}"/>
                <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                        Content="0" Style="{StaticResource keyboardButton}"/>
                <Button Grid.Row="3" Grid.Column="2"
                        Content="&lt;-" Style="{StaticResource keyboardButton}"/>
                <Button Grid.Row="4" Grid.Column="2"
                        Content="x" Style="{StaticResource keyboardButton}"/>
                <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                        Content="Enter" Style="{StaticResource keyboardButton}"/>
            </Grid>
        </Grid>
    </Border>
</Window>
