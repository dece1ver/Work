<Window x:Class="eLog.Views.Windows.ReadBarCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eLog.Views.Windows" xmlns:cmd="clr-namespace:eLog.Infrastructure.Commands"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True"
        mc:Ignorable="d"
        Title="Штрихкод" Height="240" Width="320" WindowStartupLocation="CenterOwner">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="Отсканируйте штрихкод" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="20" FontSize="24"/>
        <Button DockPanel.Dock="Bottom" Margin="3" Content="Ok" FontSize="24" Padding="30 5" IsDefault="True" 
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=local:ReadBarCodeWindow}}">
            <Button.Command>
                <cmd:CloseDialogCommand DialogResult="True"/>
            </Button.Command>
        </Button>
        <TextBox x:Name="BarCodeTextBox" DockPanel.Dock="Bottom" Margin="3 0" Text="{Binding BarCode}" TextAlignment="Center" VerticalContentAlignment="Center" FontSize="24"/>
    </DockPanel>
</Window>
