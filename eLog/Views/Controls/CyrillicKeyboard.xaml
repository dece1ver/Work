<UserControl x:Class="eLog.Views.Controls.CyrillicKeyboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:eLog.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="140" d:DesignWidth="760">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Column="0" Grid.Row="0" Content="Й" FontSize="18" Style="{StaticResource KeyboardButton}"
                x:Name="QButton" Click="QButton_Click"/>
        <Button Grid.Column="1" Grid.Row="0" Content="Ц" FontSize="18" Style="{StaticResource KeyboardButton}"
                x:Name="WButton" Click="WButton_Click"/>
        <Button Grid.Column="2" Grid.Row="0" Content="У" FontSize="18" Style="{StaticResource KeyboardButton}"
                x:Name="EButton" Click="EButton_Click"/>
        <Button Grid.Column="3" Grid.Row="0" Content="К" FontSize="18" Style="{StaticResource KeyboardButton}"
                x:Name="RButton" Click="RButton_Click"/>
        <Button Grid.Column="4" Grid.Row="0" Content="Е" FontSize="18" Style="{StaticResource KeyboardButton}"
                x:Name="TButton" Click="TButton_Click"/>
        <Button Grid.Column="5" Grid.Row="0" Content="Н" FontSize="18" Style="{StaticResource KeyboardButton}"
                x:Name="YButton" Click="YButton_Click"/>
        <Button Grid.Column="6" Grid.Row="0" Content="Г" FontSize="18" Style="{StaticResource KeyboardButton}"
                x:Name="UButton" Click="UButton_Click"/>
        <Button Grid.Column="7" Grid.Row="0" Content="Ш" FontSize="18" Style="{StaticResource KeyboardButton}"
                x:Name="IButton" Click="IButton_Click"/>
        <Button Grid.Column="8" Grid.Row="0" Content="Щ" FontSize="18" Style="{StaticResource KeyboardButton}"
                x:Name="OButton" Click="OButton_Click"/>
        <Button Grid.Column="9" Grid.Row="0" Content="З" FontSize="18" Style="{StaticResource KeyboardButton}"
                x:Name="PButton" Click="PButton_Click"/>
        <Button Grid.Column="10" Grid.Row="0" Content="Х" FontSize="18" Style="{StaticResource KeyboardButton}"
                x:Name="LsbButton" Click="LsbButton_Click"/>

        <Button Grid.Column="0" Grid.Row="1" Content="Ф" FontSize="18" Style="{StaticResource KeyboardButton}" 
                x:Name="AButton" Click="AButton_Click"/>
        <Button Grid.Column="1" Grid.Row="1" Content="Ы" FontSize="18" Style="{StaticResource KeyboardButton}" 
                x:Name="SButton" Click="SButton_Click"/>
