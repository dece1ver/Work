        </DataGridTextColumn>

        <DataGridTextColumn x:Key="EngineerCommentColumn" Header="Комментарий техотдела" Binding="{Binding EngineerComment}" Width="125">
            <DataGridTextColumn.ElementStyle>
                <Style TargetType="TextBlock" BasedOn="{StaticResource TableTextBlock}"/>
            </DataGridTextColumn.ElementStyle>
            <DataGridTextColumn.EditingElementStyle>
                <Style TargetType="TextBox" BasedOn="{StaticResource TableLargeTextBox}"/>
            </DataGridTextColumn.EditingElementStyle>
        </DataGridTextColumn>
        <!--#endregion-->
    </Window.Resources>
    <Grid>
        <DockPanel>
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <TextBlock Text="{Binding Status}" FontSize="16" Margin="0 -1"/>
                </StatusBarItem>
            </StatusBar>
            <ProgressBar DockPanel.Dock="Bottom" IsIndeterminate="True"
                 Visibility="{Binding InProgress, Converter={StaticResource VisibilityConverter}, ConverterParameter=h}" Height="2" />
            <DockPanel DockPanel.Dock="Bottom">
                <Button DockPanel.Dock="Right" Margin="1 10 1 1" Width="100" 
                Command="{Binding OpenDailyReportWindowCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=local:PartsInfoWindow}}">
                    <Button.Content>
                        <TextBlock Text="Сформировать отчет за смену" TextWrapping="Wrap"/>
                    </Button.Content>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="2"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button DockPanel.Dock="Right" Content="Записать" Margin="0 10 0 1" Width="100" Command="{Binding UpdatePartsCommand}">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="2"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <StackPanel Orientation="Horizontal">
                    <GroupBox Header="{Binding Parts.Count}" HeaderStringFormat="Итог по выборке (элементов: {0})" d:Header="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="145"/>
                                <ColumnDefinition Width="40"/>

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Наладка общая:"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SetupTimeRatio, StringFormat=0%}" d:Text="100%" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Наладка средняя:"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding AverageSetupRatio, StringFormat=0%}" d:Text="100%"/>

                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Изготовление общее:"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding ProductionTimeRatio, StringFormat=0%}" d:Text="100%" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="Изготовление среднее:"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding AverageProductionRatio, StringFormat=0%}" d:Text="100%"/>

                            <TextBlock Grid.Row="0" Grid.Column="4" Text="Отмеченные простои:"/>
                            <TextBlock Grid.Row="0" Grid.Column="5" Text="{Binding SpecifiedDowntimesRatio, StringFormat=0%}" d:Text="8%"/>
                            <TextBlock Grid.Row="1" Grid.Column="4" Text="Неотмеченные простои:"/>
                            <TextBlock Grid.Row="1" Grid.Column="5" Text="{Binding UnspecifiedDowntimesRatio, StringFormat=0%}" d:Text="3%"/>

                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Инструменты">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>


                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBox Grid.Row="0" Grid.Column="0" Margin="1 0 2 0" Height="17" Style="{StaticResource ClearableTextBox}"
                                     Text="{Binding StartDateForCalc, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource TimeConverter}}"/>
                            <TextBox Grid.Row="1" Grid.Column="0" Margin="1 -1 2 0" Height="17" Style="{StaticResource ClearableTextBox}"
                                     Text="{Binding EndDateForCalc, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource TimeConverter}}"/>

                            <TextBox Grid.Row="0" Grid.Column="1" Margin="3 0 2 0" Height="17" IsReadOnly="True"
                                     Text="{Binding CalculatedTimeDifference, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Margin="3 -1 2 0" Height="17" IsReadOnly="True"
                                     Text="{Binding CalculatedTimeDifferenceMinutes, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"/>

                            <CheckBox Grid.Row="0" Grid.Column="2" Margin="2 -1 0 0" Content="Вычесть перерывы" IsChecked="{Binding DescreaseTimes}"/>
                            <TextBox Grid.Row="1" Grid.Column="2" Margin="3 -1 5 0" Height="17" Width="80" HorizontalAlignment="Left" Style="{StaticResource ClearableTextBox}"
                                     Text="{Binding AdditionalDescreaseValue, UpdateSourceTrigger=Default, TargetNullValue={x:Static sys:String.Empty},
                                            Converter={StaticResource ExpressionToIntConverter}}"/>

                        </Grid>
                    </GroupBox>
                </StackPanel>
            </DockPanel>

            <DockPanel DockPanel.Dock="Top" >
                <GroupBox Header="Фильтры">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="135"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="20"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="22"/>
                            <RowDefinition Height="22"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Оператор"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" 
                                 Text="{Binding OperatorFilter, UpdateSourceTrigger=PropertyChanged, Delay=500}" Style="{StaticResource ClearableTextBox}"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Смена"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" Text="Оператор" 
                                  ItemsSource="{Binding ShiftFilterItems}" DisplayMemberPath="Name" SelectedItem="{Binding ShiftFilter}"/>

                        <DockPanel Grid.Row="1" Grid.Column="2">
                            <TextBlock Text="Шт." Margin="10 0 5 0"/>
                            <TextBox Text="{Binding FinishedCountFilter, UpdateSourceTrigger=PropertyChanged, Delay=500, TargetNullValue={x:Static sys:String.Empty}}" Style="{StaticResource ClearableTextBox}"/>
                        </DockPanel>

                        <TextBlock Grid.Row="0" Grid.Column="3" Text="Деталь" Margin="25 0 0 0"/>
                        <TextBox Grid.Row="0" Grid.Column="4" Text="{Binding PartNameFilter, UpdateSourceTrigger=PropertyChanged, Delay=500}" Style="{StaticResource ClearableTextBox}"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" Text="М/Л" Margin="25 0 0 0"/>
                        <Grid Grid.Row="1" Grid.Column="4" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBox Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Text="{Binding OrderFilter, UpdateSourceTrigger=PropertyChanged, Delay=500}" Style="{StaticResource ClearableTextBox}"/>
                            <TextBlock Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Text="Уст." Margin="25 0 5 0"/>
                            <TextBox Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Text="{Binding SetupFilter, UpdateSourceTrigger=PropertyChanged, TargetNullValue={x:Static sys:String.Empty}}"
                                     Style="{StaticResource ClearableTextBox}"/>
                            <controls:IncDecControl Grid.Row="0" Grid.Column="3" Grid.RowSpan="2" Value="{Binding SetupFilter, Mode=TwoWay}"/>
                        </Grid>

                        <ComboBox Grid.Column="5" Grid.Row="0" Text="Фильтр по станку" IsEditable="True" IsReadOnly="True" Focusable="False"
                                  ItemsSource="{Binding MachineFilters}" Margin="25 0" Width="180"
                                  HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" 
                                  >
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="-1" Focusable="False">
                                        <CheckBox Content="{Binding Machine}" IsChecked="{Binding Filter}"/>
                                    </Grid>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <Button Grid.Column="5" Grid.Row="1" Margin="25 0" Command="{Binding DeleteFilterCommand}" 
                                Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal" Margin="0 2 0 0">
                                    <StaticResource ResourceKey="DeleteFilter"/>
                                    <TextBlock Text="Очистить фильтры" Margin="5 0"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <TextBlock Grid.Row="0" Grid.Column="7" Text="От" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" TextAlignment="Right"/>
                        <StackPanel Grid.Row="0" Grid.Column="8" Orientation="Horizontal" HorizontalAlignment="Right">
                            <DatePicker SelectedDate="{Binding FromDate}" />
                            <controls:IncDecControl Value="{Binding FromDate, Mode=TwoWay}" Width="23" Margin="0 0 2 0"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1" Grid.Column="7" Text="До" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" TextAlignment="Right"/>
                        <StackPanel Grid.Row="1" Grid.Column="8" Orientation="Horizontal" HorizontalAlignment="Right">
                            <DatePicker SelectedDate="{Binding ToDate}" />
                            <controls:IncDecControl Value="{Binding ToDate, Mode=TwoWay}" Width="23" Margin="0 0 2 0"/>
                        </StackPanel>

                        <Button Grid.Row="0" Grid.Column="9" Content="+ сутки" 
                                Margin="0"
                                Command="{Binding IncreaseDateCommand}"/>
                        <Button Grid.Row="1" Grid.Column="9" Content="- сутки" 
                                Margin="0"
                                Command="{Binding DecreaseDateCommand}"/>
                        <Button Grid.Row="0" Grid.Column="10" Content="Вчера" 
                                Margin="0"
                                Command="{Binding SetYesterdayDateCommand}"/>
                        <Button Grid.Row="1" Grid.Column="10" Content="Неделя" 
                                Margin="0"
                                Command="{Binding SetWeekDateCommand}"/>
                        <Button Grid.Row="0" Grid.Column="11" Content="Месяц" 
                                Margin="0"
                                Command="{Binding SetMonthDateCommand}"/>
                        <Button Grid.Row="1" Grid.Column="11" Content="Год" 
                                Margin="0"
                                Command="{Binding SetYearDateCommand}"/>
                        <Button Grid.Row="0" Grid.Column="12" Grid.RowSpan="2" Content="*"
                                Margin="0" 
                                Command="{Binding SetAllDateCommand}"/>
                    </Grid>
                </GroupBox>

            </DockPanel>
            <Menu DockPanel.Dock="Top" Focusable="False">
                <Menu.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Focusable" Value="False"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    </Style>
                </Menu.Resources>
                <MenuItem>
                    <MenuItem.Header>
                        <Button Content="{StaticResource SyncIcon}" Command="{Binding RefreshPartsCommand}" ToolTip="Обновить из БД"/>
                    </MenuItem.Header>
                </MenuItem>
                <MenuItem>
                    <MenuItem.Header>
                        <Button Content="{StaticResource DeleteCell}" Command="{Binding DeletePartCommand}" CommandParameter="{Binding SelectedPart}"
                                ToolTip="Удалить выбранную деталь"/>
                    </MenuItem.Header>
                </MenuItem>
                <MenuItem Header="Вид">
                    <MenuItem Command="{Binding ChangeCompactViewCommand}" Icon="{StaticResource ConfirmIconFlex}"
                              Visibility="{Binding CompactView, Converter={StaticResource VisibilityConverter}}"
                              ToolTip="Компактный режим вкл/выкл" HorizontalAlignment="Stretch">
                        <MenuItem.Header>
                            <TextBlock Text="Компактный">
                                <TextBlock.Resources>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CompactView}" Value="True">
                                                <Setter Property="FontWeight" Value="DemiBold" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Resources>
                            </TextBlock>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem Command="{Binding ChangeCompactViewCommand}" Icon="{StaticResource CloseIconFlex}" 
                              Visibility="{Binding CompactView, Converter={StaticResource InvertedVisibilityConverter}}"
                              ToolTip="Компактный режим вкл/выкл" HorizontalAlignment="Stretch">
                        <MenuItem.Header>
                            <TextBlock Text="Компактный">
                                <TextBlock.Resources>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CompactView}" Value="True">
                                                <Setter Property="FontWeight" Value="DemiBold" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Resources>
                            </TextBlock>
                        </MenuItem.Header>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Расчет">
                    <MenuItem Command="{Binding ChangeCalcFixedCommand}" Icon="{StaticResource ConfirmIconFlex}"
                              Visibility="{Binding CalcFixed, Converter={StaticResource VisibilityConverter}}"
                              ToolTip="Расчет от исправленного вкл/выкл" HorizontalAlignment="Stretch">
                        <MenuItem.Header>
                            <TextBlock Text="От исправленного" FontWeight="DemiBold"/>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem Command="{Binding ChangeCalcFixedCommand}" Icon="{StaticResource CloseIconFlex}" 
                              Visibility="{Binding CalcFixed, Converter={StaticResource InvertedVisibilityConverter}}"
                              ToolTip="Расчет от исправленного вкл/выкл" HorizontalAlignment="Stretch">
                        <MenuItem.Header>
                            <TextBlock Text="От исправленного"/>
                        </MenuItem.Header>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Экспорт">
                    <MenuItem Command="{Binding OperatorReportToExcelCommand}" Icon="{StaticResource OperatorsIcon}"
                              ToolTip="Экспорт отчёта по операторам" HorizontalAlignment="Stretch">
                        <MenuItem.Header>
                            <TextBlock Text="Операторы"/>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem Command="{Binding ExportToExcelCommand}" Icon="{StaticResource ExcelWorksheetIcon}"
                              ToolTip="Экспорт выбранного" HorizontalAlignment="Stretch">
                        <MenuItem.Header>
                            <TextBlock Text="Экспорт выбранного в Excel"/>
                        </MenuItem.Header>
                    </MenuItem>
                </MenuItem>
            </Menu>
            <DataGrid ItemsSource="{Binding Parts, UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="False" VerticalGridLinesBrush="LightGray" HorizontalGridLinesBrush="LightGray"
                      ColumnWidth="SizeToCells" CanUserSortColumns="False" VerticalScrollBarVisibility="Visible" SelectionUnit="CellOrRowHeader" CanUserReorderColumns="False" SelectionMode="Extended"
                      IsEnabled="{Binding InProgress, Converter={StaticResource InvertedBoolConverter}}" Margin="0 -1 0 0" BorderThickness="0" SelectedItem="{Binding SelectedPart, UpdateSourceTrigger=PropertyChanged}"
                      AlternatingRowBackground="#01D3D3D3" PreviewMouseDown="DataGrid_PreviewMouseDown" SelectedCellsChanged="DataGrid_SelectedCellsChanged" PreviewKeyDown="DataGrid_PreviewKeyDown"
                      >
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding NeedUpdate, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                <Setter Property="Foreground" Value="Blue"/>
                            </DataTrigger>
                            <Trigger Property="IsEditing" Value="True">
                                <Setter Property="Foreground" Value="DarkRed"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="LightBlue"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>

                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#01D3D3D3"/>
                        <Setter Property="BorderBrush" Value="LightGray"/>
                        <Setter Property="BorderThickness" Value="0 1 1 1"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="3"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Setter Property="TextOptions.TextRenderingMode" Value="Grayscale"/>
                        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
                        <Setter Property="ContentTemplate" >
                            <Setter.Value>
                                <DataTemplate>
                                    <TextBlock TextWrapping="Wrap" Text="{Binding}"
                                       SnapsToDevicePixels="True"
                                       Width="100"
                                       VerticalAlignment="Center" TextAlignment="Center"
                                       HorizontalAlignment="Center">
                                        <TextBlock.LayoutTransform>
                                            <RotateTransform Angle="270" />
                                        </TextBlock.LayoutTransform>
                                    </TextBlock>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <StaticResource ResourceKey="ShiftDateColumn"/>
                    <StaticResource ResourceKey="ShiftColumn"/>
                    <StaticResource ResourceKey="OperatorColumn"/>
                    <StaticResource ResourceKey="PartNameColumn"/>
                    <StaticResource ResourceKey="OrderColumn"/>
                    <StaticResource ResourceKey="TotalCountColumn"/>
                    <StaticResource ResourceKey="FinishedCountColumn"/>
                    <StaticResource ResourceKey="SetupColumn"/>
                    <StaticResource ResourceKey="StartSetupTimeColumn"/>
                    <StaticResource ResourceKey="StartMachiningTimeColumn"/>
                    <StaticResource ResourceKey="EndMachiningTimeColumn"/>
                    <StaticResource ResourceKey="SetupTimePlanColumn"/>
                    <StaticResource ResourceKey="SetupTimeFactColumn"/>
                    <StaticResource ResourceKey="SingleProductionTimePlanColumn"/>
                    <StaticResource ResourceKey="MachiningTimeColumn"/>
                    <StaticResource ResourceKey="SingleProductionTimeColumn"/>
                    <StaticResource ResourceKey="PartReplacementTimeColumn"/>
                    <StaticResource ResourceKey="ProductionTimeFactColumn"/>
                    <StaticResource ResourceKey="PlanForBatchColumn"/>
                    <StaticResource ResourceKey="OperatorCommentColumn"/>
                    <StaticResource ResourceKey="SetupDowntimesColumn"/>
                    <StaticResource ResourceKey="MachiningDowntimesColumn"/>
                    <StaticResource ResourceKey="PartialSetupTimeColumn"/>
                    <StaticResource ResourceKey="MaintenanceTimeColumn"/>
                    <StaticResource ResourceKey="ToolSearchingTimeColumn"/>
                    <StaticResource ResourceKey="MentoringTimeColumn"/>
                    <StaticResource ResourceKey="ContactingDepartmentsTimeColumn"/>
                    <StaticResource ResourceKey="FixtureMakingTimeColumn"/>
                    <StaticResource ResourceKey="HardwareFailureTimeColumn"/>
                    <StaticResource ResourceKey="SpecifiedDowntimesRatioColumn"/>
                    <StaticResource ResourceKey="SpecifiedDowntimesCommentColumn"/>
                    <StaticResource ResourceKey="SetupRatioTitleColumn"/>
                    <StaticResource ResourceKey="MasterSetupCommentColumn"/>
                    <StaticResource ResourceKey="ProductionRatioTitleColumn"/>
                    <StaticResource ResourceKey="MasterMachiningCommentColumn"/>
                    <StaticResource ResourceKey="MasterCommentColumn"/>
                    <!--<StaticResource ResourceKey="SetupTimePlanForReportColumn"/>-->
                    <StaticResource ResourceKey="FixedSetupTimePlanColumn"/>
                    <StaticResource ResourceKey="FixedProductionTimePlanColumn"/>
                    <StaticResource ResourceKey="EngineerCommentColumn"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
        <Grid Grid.Column="0" Background="Black" d:Background="Transparent" d:Visibility="Collapsed"
              Visibility="{Binding Overlay.State, Converter={StaticResource OverlayVisibilityConverter}}"
              Opacity="{Binding Overlay.State, Converter={StaticResource OverlayOpacityConverter}}"/>
    </Grid>
</Window>
