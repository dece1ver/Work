<Window x:Class="remeLog.Views.PartsInfoWindow" x:Name="partsInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:remeLog.Views" xmlns:controls="clr-namespace:remeLog.Views.Controls"
        mc:Ignorable="d" xmlns:inf="clr-namespace:remeLog.Infrastructure" 
        xmlns:cnv="clr-namespace:remeLog.Infrastructure.Converters"
        xmlns:cnt="clr-namespace:remeLog.Views.Controls"
        xmlns:vm="clr-namespace:remeLog.ViewModels" xmlns:md="clr-namespace:remeLog.Models" 
        d:DataContext="{d:DesignInstance Type=vm:PartsInfoWindowViewModel}"
        Title="{Binding PartsInfo.Machine}" Height="800" Width="1600" 
        WindowStartupLocation="CenterOwner" 
        WindowState="Maximized" 
        PreviewKeyDown="PartsInfoWindow_PreviewKeyDown">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox" x:Key="ClearableTextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="0">
                                <Grid>
                                    <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                                    <Button x:Name="ClearButton" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0"
                                            VerticalAlignment="Center" Width="20" Height="20" Margin="0 0 0 0"
                                            Command="{Binding ClearContentCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type TextBox}}}">
                                        <Button.Content>
                                            <StaticResource ResourceKey="CleanData"/>
                                        </Button.Content>
                                    </Button>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="ClearButton" Property="Visibility" Value="Collapsed"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <ControlTemplate x:Key="ValidationTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="!" FontSize="24" Foreground="Red" Margin="0 -8 -8 0" MouseLeftButtonUp="ValidationTextBlock_MouseLeftButtonUp"/>
                <AdornedElementPlaceholder Grid.Column="1"/>
            </Grid>
        </ControlTemplate>
        <ControlTemplate x:Key="ValidationEditingTemplate">
            <Border BorderBrush="Red" BorderThickness="1">
                <AdornedElementPlaceholder/>
            </Border>
        </ControlTemplate>
        <!--#region Columns -->
        <DataGridTextColumn x:Key="MachineColumn" Header="Станок" Binding="{Binding Machine}" 
                            Width="85" IsReadOnly="True" 
                            Visibility="{Binding DataContext.MachineVisibility, 
                            Source={x:Reference partsInfoWindow}, 
                            Converter={StaticResource InvertedVisibilityConverter}}">
            <DataGridTextColumn.ElementStyle>
                <Style TargetType="TextBlock" BasedOn="{StaticResource TableTextBlock}"/>
            </DataGridTextColumn.ElementStyle>
            <DataGridTextColumn.EditingElementStyle>
                <Style TargetType="TextBox" BasedOn="{StaticResource TableTextBox}"/>
            </DataGridTextColumn.EditingElementStyle>
        </DataGridTextColumn>

        <DataGridTextColumn x:Key="ShiftDateColumn" Header="Дата" Binding="{Binding ShiftDate, StringFormat=dd.MM.yy, Converter={StaticResource ShortDateConverter}}" Width="50"
                            >
            <DataGridTextColumn.ElementStyle>
                <Style TargetType="TextBlock" BasedOn="{StaticResource TableTextBlock}"/>
            </DataGridTextColumn.ElementStyle>
            <DataGridTextColumn.EditingElementStyle>
                <Style TargetType="TextBox" BasedOn="{StaticResource TableTextBox}"/>
            </DataGridTextColumn.EditingElementStyle>
        </DataGridTextColumn>

        <DataGridTemplateColumn x:Key="ShiftColumn" Header="Смена" Width="35">
            <DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Shift}" Style="{StaticResource TableTextBlock}"/>
                </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
            <DataGridTemplateColumn.CellEditingTemplate>
                <DataTemplate>
                    <ComboBox ItemsSource="{x:Static inf:AppSettings.ShiftTypes}" 
              SelectedItem="{Binding Shift}" Style="{StaticResource TableComboBox}"/>
                </DataTemplate>
            </DataGridTemplateColumn.CellEditingTemplate>
        </DataGridTemplateColumn>

        <DataGridTextColumn x:Key="OperatorColumn" Header="Оператор" Binding="{Binding Operator}" Width="95">
            <DataGridTextColumn.ElementStyle>
