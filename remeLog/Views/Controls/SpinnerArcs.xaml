<UserControl x:Class="remeLog.Views.Controls.SpinnerArcs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:remeLog.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Viewbox Width="80" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Canvas Width="80" Height="80">
                <Canvas.RenderTransform>
                    <RotateTransform x:Name="spinnerRotate" CenterX="40" CenterY="40" />
                </Canvas.RenderTransform>

                <!-- Верхняя дуга -->
                <Path Stroke="White" StrokeThickness="4"
                      Data="M 40,10 A 30,30 0 0 1 70,40"
                      StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                <!-- Нижняя дуга -->
                <Path Stroke="White" StrokeThickness="4"
                      Data="M 40,70 A 30,30 0 0 1 10,40"
                      StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
            </Canvas>
        </Viewbox>
        <Grid.Triggers>
            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                <BeginStoryboard>
                    <Storyboard RepeatBehavior="Forever">
                        <DoubleAnimation Storyboard.TargetName="spinnerRotate"
                                         Storyboard.TargetProperty="Angle"
                                         From="0" To="360"
                                         Duration="0:0:1"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
    </Grid>
</UserControl>
