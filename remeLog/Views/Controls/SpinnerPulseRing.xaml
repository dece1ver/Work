<UserControl x:Class="remeLog.Views.Controls.SpinnerPulseRing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:remeLog.Views.Controls"
             mc:Ignorable="d">
    <Viewbox Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Ellipse Width="60" Height="60" Stroke="White" StrokeThickness="4" Opacity="0">
            <Ellipse.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1" AutoReverse="True"
                                                 Duration="0:0:0.8"/>
                            <DoubleAnimation Storyboard.TargetProperty="Width"
                                                 From="40" To="60" AutoReverse="True"
                                                 Duration="0:0:0.8"/>
                            <DoubleAnimation Storyboard.TargetProperty="Height"
                                                 From="40" To="60" AutoReverse="True"
                                                 Duration="0:0:0.8"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Ellipse.Triggers>
        </Ellipse>
    </Viewbox>
</UserControl>
