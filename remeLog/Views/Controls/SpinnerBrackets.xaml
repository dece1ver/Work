<UserControl x:Class="remeLog.Views.Controls.SpinnerBrackets"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:remeLog.Views.Controls"
             mc:Ignorable="d" Width="100" Height="100">
    <Grid >
        <TextBlock Margin="0 -15 0 0" Text="(" FontSize="48" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock.RenderTransform>
                <TranslateTransform x:Name="leftBracketTransform" />
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock Margin="0 -15 0 0" Text=")" FontSize="48" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center">
            <TextBlock.RenderTransform>
                <TranslateTransform x:Name="rightBracketTransform" />
            </TextBlock.RenderTransform>
        </TextBlock>

        <Grid.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                        <DoubleAnimation Storyboard.TargetName="leftBracketTransform" Storyboard.TargetProperty="X"
                                         From="0" To="10" Duration="0:0:0.5" />
                        <DoubleAnimation Storyboard.TargetName="rightBracketTransform" Storyboard.TargetProperty="X"
                                         From="0" To="-10" Duration="0:0:0.5" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
    </Grid>
</UserControl>
