<Window x:Class="remeLog.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:remeLog.Views"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:vm="clr-namespace:remeLog.ViewModels" d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <DockPanel LastChildFill="True" Grid.Column="0">
            <Menu DockPanel.Dock="Top" Background="Transparent">
                <MenuItem Header="Параметры">
                    <MenuItem Header="Параметры"
                      Command="{Binding EditSettingsCommand}" />
                </MenuItem>
                <MenuItem Header="Справка">
                    <MenuItem Header="О программе"
                      Command="{Binding ShowAboutCommand}" />
                </MenuItem>
            </Menu>
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <TextBlock Text="{Binding Status}" FontSize="16" Margin="0 -1"/>
                </StatusBarItem>
                <StatusBarItem HorizontalAlignment="Right" VerticalContentAlignment="Stretch">
                    <ProgressBar Value="{Binding Progress}" Maximum="{Binding ProgressMaxValue}" IsIndeterminate="True"
                             Visibility="{Binding ProgressBarVisibility}" Width="200" Margin="0"/>
                </StatusBarItem>
            </StatusBar>
            <DockPanel>
                
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
