<Application x:Class="remeLog.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:remeLog"
             xmlns:cnv="clr-namespace:remeLog.Infrastructure.Converters"
             xmlns:stl="clr-namespace:remeLog.Infrastructure.Styles"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/libeLog;component/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <cnv:BooleanToBrushConverter x:Key="BooleanToBrushConverter"/>
            <cnv:CollectionConverteter x:Key="CollectionConverteter"/>
            <cnv:EnumDescriptionConverter x:Key="EnumDescriptionConverter"/>
            <cnv:ExpressionToDoubleConverter x:Key="ExpressionToDoubleConverter"/>
            <cnv:ExpressionToIntConverter x:Key="ExpressionToIntConverter"/>
            <cnv:IntNullableConverter x:Key="IntNullableConverter"/>
            <cnv:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
            <cnv:InvertedVisibilityConverter x:Key="InvertedVisibilityConverter"/>
            <cnv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <cnv:OverlayOpacityConverter x:Key="OverlayOpacityConverter"/>
            <cnv:OverlayVisibilityConverter x:Key="OverlayVisibilityConverter"/>
            <cnv:ReportStateVisibility x:Key="ReportStateVisibility"/>
            <cnv:RoleButtonConverter x:Key="RoleButtonConverter"/>
            <cnv:RoleColorConverter x:Key="RoleColorConverter"/>
            <cnv:ShortDateConverter x:Key="ShortDateConverter"/>
            <cnv:StatusVisibilityConverter x:Key="StatusVisibilityConverter"/>
            <cnv:TimeConverter x:Key="TimeConverter"/>
            <cnv:UserRoleVisibilityConverter x:Key="UserRoleVisibilityConverter"/>
            <cnv:VisibilityConverter x:Key="VisibilityConverter"/>
            <stl:CustomRowStyleSelector x:Key="CustomRowStyleSelector"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
